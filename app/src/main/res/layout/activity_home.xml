<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".telas.HomeActivity">

    <ScrollView
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="30dp"
                android:textSize="22sp"
                android:text="Horário"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TableRow
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <EditText
                    android:id="@+id/idHoraInicial"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Hora Inicial"
                    android:inputType="datetime"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

                <TextView
                    android:padding="8dp"
                    android:text="Até"
                    android:textSize="20sp"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/idHoraFinal"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="Hora Final"
                    android:inputType="datetime"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />
            </TableRow>

            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="30dp"
                android:textSize="22sp"
                android:text="Dias da Semana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <TableRow
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <CheckBox
                        android:id="@+id/idCBSegunda"
                        android:text="Seg"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:layout_marginLeft="@dimen/paddingLeft"
                        android:id="@+id/idCBTerca"
                        android:text="Ter"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:layout_marginLeft="@dimen/paddingLeft"
                        android:id="@+id/idCBQuarta"
                        android:text="Qua"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:layout_marginLeft="@dimen/paddingLeft"
                        android:id="@+id/idCBQuinta"
                        android:text="Qui"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <CheckBox
                        android:layout_marginLeft="@dimen/paddingLeft"
                        android:id="@+id/idCBSexta"
                        android:text="Sex"
                        android:textColor="@color/colorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <CheckBox
                    android:id="@+id/idCBSabado"
                    android:text="Sab"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:layout_marginLeft="@dimen/paddingLeft"
                    android:id="@+id/idCBDomingo"
                    android:text="Dom"
                    android:textColor="@color/colorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TableRow>

            <TableRow
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="30dp"
                    android:textSize="22sp"
                    android:text="Até 15Km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="textEnd"
                    android:id="@+id/idtxtValor15"
                    android:layout_marginTop="30dp"
                    android:textSize="22sp"
                    android:text="R$ 100"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="30dp"
                    android:textSize="22sp"
                    android:text="Até 30Km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="textEnd"
                    android:id="@+id/idtxtValor30"
                    android:layout_marginTop="30dp"
                    android:textSize="22sp"
                    android:text="R$ 130"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end" />
            </TableRow>

            <TableRow
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="30dp"
                    android:textSize="22sp"
                    android:text="Acima de 31Km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAlignment="textEnd"
                    android:id="@+id/idtxtValor31"
                    android:layout_marginTop="30dp"
                    android:textSize="22sp"
                    android:text="R$ 130"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end" />
            </TableRow>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>